---
import { sanityClient } from 'sanity:client';

const siteSettings = await sanityClient.fetch(`*[_type == "siteSettings"]`);

const { siteTitle, address, phone, email, instagram, facebook } =
  siteSettings[0];
---

<footer>
  <div class="footer-content">
    <div class="footer-section">
      <h3>Studio</h3>
      <p>
        <a
          href="https://www.google.com/maps/place/Mammoth+American+Tattoo/@39.7546897,-104.9668086,17z/data=!3m1!4b1!4m6!3m5!1s0x876b879cac505b19:0xf28717647faec95e!8m2!3d39.7546856!4d-104.9642337!16s%2Fg%2F1q6jkb7bn?entry=ttu&g_ep=EgoyMDI1MTIwOS4wIKXMDSoASAFQAw%3D%3D"
          target="_blank">{address}</a
        >
      </p>
      <p><a href=`tel:${phone}`>{phone}</a></p>
      <p><a href=`mailto:${email}`>{email}</a></p>
    </div>

    <div class="footer-section">
      <h3>Hours</h3>
      <ul>
        <li>Wednesday - Saturday 11:00am - 7:00pm</li>
        <li>(Or by Appointment)</li>
      </ul>
    </div>

    <div class="footer-section">
      <h3>Follow our work</h3>
      <ul>
        <li>
          <a href=`https://www.instagram.com/${instagram}` target="_blank">
            Instagram: @{instagram}</a
          >
        </li>
        <li>
          <a href=`https://www.facebook.com/${facebook}` target="_blank">
            Facebook: @{facebook}</a
          >
        </li>
      </ul>
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; {new Date().getFullYear()} {siteTitle}. All rights reserved.</p>
  </div>
</footer>

<style>
  footer {
    background: black;
    color: #faf8f5;
    padding: 4rem 0 2rem;
    position: relative;
    overflow: hidden;
  }

  footer::after {
    content: '';
    position: absolute;
    right: -5rem;
    bottom: -5rem;
    width: 400px;
    height: 400px;
    background-image: url('/images/logo.png');
    background-size: contain;
    background-repeat: no-repeat;
    opacity: 0.625;
    pointer-events: none;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
  }

  .footer-section h3 {
    color: white;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .footer-section p,
  .footer-section li {
    color: #d4cfc6;
    line-height: 1.8;
    margin-bottom: 0.5rem;
  }

  .footer-section ul {
    padding: 0;
    margin-block-start: 0;
    list-style: none;
  }

  .footer-section a {
    color: #d4cfc6;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-section a:hover {
    color: var(--highlight-color);
  }

  .footer-bottom {
    color: white;
    margin-block-start: 2rem;
    padding-block-start: 2rem;
    font-size: 1rem;
    text-align: center;
  }
</style>
