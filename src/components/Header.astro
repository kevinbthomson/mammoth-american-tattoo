---
import Nav from './Nav.astro';
import NavSecondary from './NavSecondary.astro';
---

<header class="site-header">
  <div class="container">
    <a href="/" title="Home" class="logo">
      <span>Mammoth American Tattoo</span>
      <img
        src="/assets/images/header-logo.webp"
        alt="Mammoth American Tattoo"
        width="164"
        height="164"
      />
    </a>
    <Nav aria-label="Main" />
    <NavSecondary aria-label="Secondary" />
  </div>
</header>

<style>
  header.site-header {
    background: #121212;
    border-bottom-color: var(--highlight-color);
    border-bottom-width: 0.625rem;
    border-bottom-style: solid;
    box-shadow: 0 0 20px rgb(black, 0.4);
    box-sizing: border-box;
    height: 7.5rem;
    overflow: hidden;
    padding: 0;
    position: fixed;
    transition: all 0.3s;
    width: 100vw;
    z-index: 1000;

    &[data-scrolled='true'] {
      border-bottom-width: 0.25rem;
      height: 4rem;
    }

    .container {
      align-items: center;
      display: flex;
      height: 100%;
      justify-content: space-between;
      width: min(1440px, 96vw);

      > * {
        z-index: 2;
      }
    }

    a {
      text-decoration: none;
    }

    &::before {
      left: 0;
      content: 'Salt Lake City';
    }

    &::after {
      display: none;
      right: 100px;
      content: '2026';
    }

    nav {
      &[aria-label='Main'] {
        box-sizing: border-box;
        position: fixed;
        width: 100vw;
        height: 100vh;
        background-color: green;
        top: 0;
        left: 0;
        padding: 2rem;
        transition: all 0.3s ease-in-out;
        translate: -100vw 0;
        z-index: 100;

        &[data-mobile-nav-open='true'] {
          translate: 0 0;
        }
      }

      & ul {
        display: flex;
        padding: 0;
        list-style: none;

        & li {
          align-items: center;
          display: flex;
          line-height: 1;
          margin-block-end: 0;
          margin-inline-end: 1rem;

          &:last-of-type {
            margin-inline-end: 0;
          }

          & a {
            color: var(--white);
            font-weight: 700;
            font-family: var(--heading-font);
            font-size: 2rem;
            text-transform: uppercase;
            transition: all 200ms;

            &:hover {
              color: var(--highlight-color);
              scale: 1.1;
            }

            &:active {
              color: var(--white);
              scale: 1;
            }

            &[aria-current='page'] {
              color: var(--highlight-color);
            }
          }
        }
      }

      &[aria-label='Secondary'] {
        & ul {
          display: flex;

          gap: 0.5rem;

          & li {
            align-items: center;
            display: flex;
            line-height: 1;
            margin-block-end: 0;
            margin-inline-end: 1rem;

            &:last-of-type {
              margin-inline-end: 0;
            }
          }
        }
      }
    }
  }
</style>
