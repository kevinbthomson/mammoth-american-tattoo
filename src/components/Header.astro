---
import { sanityClient } from 'sanity:client';
import Layout from '../layouts/Layout.astro';
// import GoogleMap from '../components/GoogleMap.astro';
const siteSettings = await sanityClient.fetch(`*[_type == "siteSettings"]`);

const site = siteSettings[0];

import Nav from './Nav.astro';
import NavSecondary from './NavSecondary.astro';
---

<header class="site-header">
  <div class="container">
    <a href=`tel:${site.phone}` title="Call us" class="logo">
      <h4 class="new-rocker-regular">{site.phone}</h4>
    </a>
    <Nav aria-label="Main" />
    <NavSecondary aria-label="Secondary" />
  </div>
</header>

<style>
  header.site-header {
    background: #1c1c1c;
    box-shadow: 0 0 20px rgb(0, 0, 0, 0.624);
    box-sizing: border-box;
    border-bottom: 0.5rem solid var(--primary-color);
    color: white;
    height: 7.5rem;
    overflow: hidden;
    padding: 0;
    position: fixed;
    transition: all 0.3s;
    width: 100vw;
    z-index: 1000;

    &[data-scrolled='true'] {
      border-bottom-width: 0.25rem;
      height: 4rem;
    }
  }

  .container {
    align-items: center;
    display: flex;
    height: 100%;
    justify-content: space-between;
    padding-inline: 0.5rem;
    width: min(1440px, 96vw);

    > * {
      z-index: 2;
    }
  }

  a {
    text-decoration: none;
  }
  .logo {
    color: white;
    position: relative;
    transition: all 0.3s;

    &:hover {
      scale: 1.1;
    }
  }

  h4 {
    font-size: 2rem;
    text-shadow: 0 1px 3px rgb(0, 0, 0, 0.624);
  }
</style>

<script>
  function resizeHeader(el: HTMLElement, scrolled: string) {
    el.dataset.scrolled = scrolled;
  }

  const header = document.querySelector(
    'header.site-header'
  ) as HTMLElement | null;

  window.addEventListener('scroll', () => {
    if (window.scrollY > 100) {
      if (header) resizeHeader(header, 'true');
      // if (heroBanner) resizeHeader(heroBanner, 'true');
    } else {
      if (header) resizeHeader(header, 'false');
      // if (heroBanner) resizeHeader(heroBanner, 'false');
    }
  });
</script>
