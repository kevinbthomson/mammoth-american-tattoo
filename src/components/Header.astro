---
import site from '../_data/site.json';
import Nav from './Nav.astro';

---

<header>
    <div class="header-content">
        <a href="/" class="logo">
            Mammoth American Tattoo
        </a>
        <Nav />
    </div>
</header>

<style>/* Header */
  header {
      background: linear-gradient(135deg, #8b1538 0%, #a01a3a 100%);
      color: #faf8f5;
      padding: 1rem 0;
      position: relative;
      overflow: hidden;
  }

  header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: repeating-linear-gradient(
          45deg,
          transparent,
          transparent 10px,
          rgba(255, 255, 255, 0.05) 10px,
          rgba(255, 255, 255, 0.05) 20px
      );
  }

  .header-content {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 2rem;
      position: relative;
      z-index: 1;
  }

  .logo {
      font-size: 2.5rem;
      font-weight: bold;
      letter-spacing: 0.15em;
      text-transform: uppercase;
  }

  .tagline {
      font-size: 1rem;
      color: #f5f2ed;
      font-style: italic;
      opacity: 0.9;
  }</style>