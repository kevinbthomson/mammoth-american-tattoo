<nav aria-label="Main">
  <ul class="nav-container">
    <li><a href="/" class="nav-item">Home</a></li>
    <li><a href="/about" class="nav-item">About</a></li>
    <li><a href="/artists" class="nav-item">Artists</a></li>
    <li><a href="/tattoo-aftercare" class="nav-item">Aftercare</a></li>
  </ul>
</nav>

<style>
  .nav-container {
    display: flex;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    color: #faf8f5;
    text-decoration: none;
    font-weight: bold;
  }

  nav {
    &[aria-label='Main'] {
      background-color: #2f2f2f;
      box-sizing: border-box;
      height: 100vh;
      left: 0;
      overflow: hidden;
      padding: 2rem;
      position: fixed;
      top: 0;
      transition: all 0.3s ease-in-out;
      translate: -100vw 0;
      width: 100vw;
      z-index: 100;

      &::before {
        content: '';
        position: absolute;
        right: -2rem;
        bottom: -2rem;
        width: 70%;
        aspect-ratio: 1;
        background-image: url('/images/logo.png');
        background-size: contain;
        background-repeat: no-repeat;
        opacity: 0.625;
        pointer-events: none;
      }

      &[data-mobile-nav-open='true'] {
        translate: 0 0;
      }
    }

    & ul {
      display: block;
      padding: 0;
      list-style: none;

      & li {
        line-height: 1;
        margin-block-end: 2rem;

        & a {
          color: var(--white);
          font-weight: 700;
          font-family: var(--heading-font);
          font-size: 2rem;
          transition: all 200ms;
          text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);

          &:hover {
            color: var(--highlight-color);
            scale: 1.1;
          }

          &:active {
            color: var(--white);
            scale: 1;
          }

          &[aria-current='page'] {
            color: var(--highlight-color);
          }
        }
      }
    }
  }

  @media screen and (min-width: 768px) {
    nav[aria-label='Main'] {
      background-color: transparent;
      height: auto;
      padding: 0;
      position: relative;
      translate: 0 0;
      width: auto;

      &::before {
        display: none;
      }

      & ul {
        display: flex;
        gap: 2rem;

        & li {
          align-items: center;
          display: flex;
          line-height: 1;
          margin-block-end: 0;

          &:first-of-type {
            display: none;
          }

          &:last-of-type {
            margin-inline-end: 0;
          }

          @media (min-width: $breakpoint-lg) {
            margin-inline-end: 1.5rem;
          }

          @media (min-width: $breakpoint-xl) {
            margin-inline-end: 2rem;
          }

          a {
            font-family: var(--body-font);
            font-size: 1.25rem;
          }
        }
      }
    }
  }
</style>
