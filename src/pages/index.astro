---
import { sanityClient } from 'sanity:client';
import Layout from '../layouts/Layout.astro';
// import GoogleMap from '../components/GoogleMap.astro';
const siteSettings = await sanityClient.fetch(`*[_type == "siteSettings"]`);

const site = siteSettings[0];
---

<Layout title={site.siteTitle}>
  <div class="hero-banner">
    <!-- <img src="/images/logo.png" alt="Mammoth American Tattoo" /> -->
    <h1>{site.siteTitle}</h1>
  </div>
  <!-- <GoogleMap /> -->
</Layout>

<style>
  .hero-banner {
    color: white;
    align-items: center;
    flex-direction: column;
    background-image: url('/images/hero-vert.webp');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    display: flex;
    height: 80dvh;
    padding: 2rem;
    text-align: center;
    width: 100dvw;
    z-index: 1;
    justify-content: center;
  }

  h1 {
    font-size: 3rem;
    line-height: 1.12;
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);
  }

  @media screen and (min-width: 900px) {
    .hero-banner {
      height: 50dvh;
    }
    h1 {
      font-size: 6rem;
    }
  }
</style>
